<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bt.gov.dit.discoverbhutan">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppThemeMain">
        <service
            android:name=".GeofenceTransitionService"
            android:exported="false" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".MainActivity"
            android:label="Choose Game Mode" />
        <activity
            android:name=".StageOne"
            android:label="Stage One"
            android:parentActivityName=".Stages">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="bt.gov.dit.discoverbhutan.Stages" />
        </activity>



        <activity
            android:name=".Details"
            android:label="@string/title_activity_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Stages"
            android:label="Select Stage"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="bt.gov.dit.discoverbhutan.MainActivity" />
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.Dark"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity
            android:name=".SignupActivity"
            android:theme="@style/AppTheme.Dark"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QuizActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity android:name=".FetchQuestion">

        </activity>
        <activity
            android:name=".ResultActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".NavigationDrawer"
            android:label="@string/title_activity_navigation_drawer"
            android:theme="@style/AppThemeMain.NoActionBar"></activity>
    </application>

</manifest>