<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="bt.gov.dit.discoverbhutan.MainActivity">
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="bt.gov.dit.discoverbhutan.MainActivity"
    tools:showIn="@layout/main_content">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:id="@+id/location_bar"
                    android:orientation="horizontal"
                    android:background="@drawable/buddha"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true"
                    android:gravity="left"
                    >
                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="80dp"
                        android:layout_marginLeft="10dp"
                        android:shadowColor="#000000"
                        android:shadowRadius="5"
                        android:shadowDy="5"
                        android:text="LOCATION MODE"
                        android:textColor="#ffffff"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                    <Button
                        android:id="@+id/play_location"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        app:layout_anchor="@id/location_bar"
                        app:layout_anchorGravity="right"
                        android:layout_marginTop="75dp"
                        android:layout_marginLeft="15dp"
                        android:textSize="18sp"
                        android:clickable="true"
                        android:text="Play"
                        app:backgroundTint="@color/primary_dark"
                        android:textColor="#ffffff"
                        app:srcCompat="@android:drawable/ic_media_play"
                        />
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_viewone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:id="@+id/eventbar"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/event"
                    android:gravity="left"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="80dp"
                        android:shadowColor="#000000"
                        android:shadowRadius="5"
                        android:shadowDy="5"
                        android:text="EVENT MODE"
                        android:textColor="#ffffff"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                    <Button
                        android:id="@+id/play_event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="75dp"
                        android:layout_marginLeft="65dp"
                        android:clickable="true"
                        android:text="Play"
                        android:textColor="#ffffff"
                        android:textSize="18dp"
                        app:backgroundTint="@color/primary_dark"
                        app:layout_anchor="@id/eventbar"
                        app:layout_anchorGravity="right"
                        app:srcCompat="@android:drawable/ic_media_play"
                        />
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_v"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="3dp"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:id="@+id/freebar"
                android:orientation="horizontal"
                android:background="@drawable/free"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:gravity="left"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="80dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#ffffff"
                    android:textSize="30sp"
                    android:text="FREE MODE"
                    android:textStyle="bold"
                    android:shadowColor="#000000"
                    android:shadowRadius="5"
                    android:shadowDy="5"
                    />
                <Button
                    android:id="@+id/play_free"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:layout_anchor="@id/freebar"
                    app:layout_anchorGravity="right"
                    android:layout_marginTop="75dp"
                    android:layout_marginLeft="90dp"
                    android:textSize="18sp"
                    android:clickable="true"
                    app:srcCompat="@android:drawable/ic_media_play"
                    android:text="Play"
                    android:textColor="#ffffff"

                    app:backgroundTint="@color/primary_dark"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>

